@page
@model LoginModel

@{
    ViewData["Title"] = "";
}
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                <br />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <br />
                <div class="form-group">
                    <label asp-for="Input.Email" class="form-label"></label>
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password" class="form-label"></label>
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <p>
                    <a id="forgot-password" asp-page="./ForgotPassword" class="text-right border-0 text-danger forgot" style="text-decoration: none;">Forgot your password?</a>

                </p>
                <br />
                <div>
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <br />
                <div >
                    <button class="login" id="login-submit" type="submit">Log in</button>
                </div>
                <br />
                <div >
                   
                    <p>
                        <a class="sign-up" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">You don't have a account?</a>
                    </p>
                   @*  <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" >Resend email confirmation</a>
                    </p> *@
                </div>
                <br />
                @* <div>
                    <p>You can sign in with: </p>
                </div>
                <br />
                <div>
                    <a asp-area="Admin" asp-action="LoginByGoogle" asp-controller="Account" class="btn btn-outline-secondary">
                        <i class="fab fa-google fa-2x " style="color: #4285F4;"></i>
                    </a>

                </div> *@
                
            </form>
        </section>

    
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
