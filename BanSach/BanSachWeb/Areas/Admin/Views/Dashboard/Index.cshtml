<head>
    <meta charset="utf-8">
    <title>Book Store</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="Free HTML Templates" name="keywords">
    <meta content="Free HTML Templates" name="description">
    <link href="/img/favicon.ico" rel="icon">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
</head>

<body>
    <div class="container mt-4">
        <h2 class="text-center mb-4">Revenue Overview</h2>
        <div class="row">
            <div class="col-md-4 col-sm-12 mb-4">
                <div class="card text-white bg-primary mb-3">
                    <div class="card-header">Revenue Today</div>
                    <div class="card-body">
                        <h5 class="card-title">
                            @if (User.IsInRole("Admin"))
                            {
                                @ViewData["RevenueToday"]
                            }
                            else
                            {
                                @:---
                            }
                            €
                        </h5>
                        <p class="card-text">Total Orders: @ViewData["OrdersToday"]</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 col-sm-12 mb-4">
                <div class="card text-white bg-success mb-3">
                    <div class="card-header">Revenue This Month</div>
                    <div class="card-body">
                        <h5 class="card-title">
                            @if (User.IsInRole("Admin"))
                            {
                                @ViewData["RevenueMonth"]
                            }
                            else
                            {
                                @:---
                            }
                            €
                        </h5>
                        <p class="card-text">Total Orders: @ViewData["OrdersMonth"]</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 col-sm-12 mb-4">
                <div class="card text-white bg-warning mb-3">
                    <div class="card-header">Revenue This Year</div>
                    <div class="card-body">
                        <h5 class="card-title">
                            @if (User.IsInRole("Admin"))
                            {
                                @ViewData["RevenueYear"]
                            }
                            else
                            {
                                @:---
                            }
                            €
                        </h5>
                        <p class="card-text">Total Orders: @ViewData["OrdersYear"]</p>
                    </div>
                </div>
            </div>
        </div>
        <h2 class="text-center mb-4">Statistics</h2>

        <!-- Statistics Section -->
        <div class="row mt-5">
            <div class="col-md-4 col-sm-12 mb-4">
                <div class="card text-white bg-info mb-3">
                    <div class="card-header">Total Products</div>
                    <div class="card-body">
                        <h5 class="card-title">
                            @ViewData["TotalProducts"]
                        </h5>
                        <p class="card-text">Total Number of Products Available</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 col-sm-12 mb-4">
                <div class="card text-white bg-secondary mb-3">
                    <div class="card-header">Total Comments</div>
                    <div class="card-body">
                        <h5 class="card-title">
                            @ViewData["TotalComments"]
                        </h5>
                        <p class="card-text">Total Number of Comments</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 col-sm-12 mb-4">
                <div class="card text-white bg-dark mb-3">
                    <div class="card-header">Total Users</div>
                    <div class="card-body">
                        <h5 class="card-title">
                            @ViewData["TotalUsers"]
                        </h5>
                        <p class="card-text">Total Number of Registered Users</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
