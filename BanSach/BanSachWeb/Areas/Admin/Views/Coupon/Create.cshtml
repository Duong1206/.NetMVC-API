@model BanSach.Model.Coupon

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2>Create Coupon</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div>

        <!-- Input Fields -->
        <div class="mb-3">
            <label asp-for="Name">Name</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Description">Description</label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="DateStarted">Date Started</label>
            <input asp-for="DateStarted" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
            <span asp-validation-for="DateStarted" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="DateExpired">Date Expired</label>
            <input asp-for="DateExpired" class="form-control" value="@DateTime.Now.AddDays(5).ToString("yyyy-MM-dd")" />
            <span asp-validation-for="DateExpired" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Quantity">Quantity</label>
            <input asp-for="Quantity" class="form-control" />
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Status">Status</label>
            <select asp-for="Status" class="form-control">
                <option value="1">Active</option>
                <option value="0">Inactive</option>
            </select>
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>

        <!-- Submit Button -->
        <button type="submit" class="btn btn-primary">Create</button>
        <a asp-controller="Coupon" asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
