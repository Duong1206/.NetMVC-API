@model IEnumerable<Category>

<partial name="_Notification" />
<h1>Index Category</h1>
    <a asp-action="Create" asp-controller="Category">Create</a>
    <table class="table table-bordered table-striped">
        <thead>
            <th>Category Name</th>
            <th>Display Order</th>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.DisplayOrder</td>
                    <td>
                        <a class="btn btn-primary" asp-controller="Category" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        <a class="btn btn-primary" asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id">Delete</a>

                    </td>
                </tr>
            }
        </tbody>
    </table>